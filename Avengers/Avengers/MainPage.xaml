<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Avengers"
             x:Class="Avengers.MainPage">

    <StackLayout Orientation="Vertical"  Margin=" 20">



        <StackLayout VerticalOptions="Center" Padding="30">
            <Button Text="TAKE PHOTO" Clicked="ILoadCamera" />

            <Button x:Name="analyseButton" Text="ANALYSE" Clicked ="INavigateResultsPage" IsVisible="False"/>

        </StackLayout>

        <StackLayout Orientation="Vertical" VerticalOptions="End" Padding="30">

            <ActivityIndicator x:Name="loadingcircle" IsRunning="False" Color="Red" VerticalOptions="End"/>

        </StackLayout>

    </StackLayout>

</ContentPage>